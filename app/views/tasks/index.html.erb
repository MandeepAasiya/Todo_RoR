<div class="tasks index">

  <div class="h1anchor">
  <h1>Welcome To Your ToDo List</h1> 

  <h3><%= button_to("+  Add New Task", new_task_path, :method => :get , :class => 'form-buttons') %></h3>

  </div>
  
  <br> </br>
  
  <table class="listing" summary="Task list">
    <tr class="header">
      <th>Tasks</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"> Actions </th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td class="center"><%= task.priority %></td>
      <td class="center"><%= task.completed ? 'Completed' : 'Pending' %></td>
      <td><%= link_to "Show", task_path(task) %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Delete", delete_task_path(task) %></td>
    </tr>
    <% end %>
  </table>
</div>
